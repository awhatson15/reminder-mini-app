# Основные настройки приложения
PORT=3000
NODE_ENV=development # production / development / test

# База данных
MONGO_URI=mongodb://mongodb:27017/reminder-app

# Telegram
BOT_TOKEN=your_telegram_bot_token # Получить у @BotFather
WEBHOOK_URL=https://your-domain.com # URL вашего приложения

# Логирование (debug / info / warn / error)
LOG_LEVEL=info

# Настройки CORS
ALLOWED_ORIGINS=https://your-domain.com,https://telegram.org

# Максимальное количество записей на страницу (для пагинации)
DEFAULT_PAGE_LIMIT=20 