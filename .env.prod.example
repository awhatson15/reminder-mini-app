# Основные настройки приложения
PORT=3000
NODE_ENV=production

# База данных
MONGO_URI=mongodb://mongodb:27017/reminder-app

# MongoDB аутентификация
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=password

# Telegram
BOT_TOKEN=your_telegram_bot_token
WEBHOOK_URL=https://your-app-domain.com
TELEGRAM_CHAT_ID=your_chat_id_for_alerts
TELEGRAM_CHAT_ID_CRITICAL=your_chat_id_for_critical_alerts
TELEGRAM_BOT_TOKEN=your_alert_bot_token

# Логирование
LOG_LEVEL=info

# Настройки CORS
ALLOWED_ORIGINS=https://your-app-domain.com,https://telegram.org,https://web.telegram.org

# Максимальное количество записей на страницу
DEFAULT_PAGE_LIMIT=20

# Docker Registry
DOCKER_REGISTRY=your-registry
TAG=latest

# Масштабирование
APP_REPLICAS=2

# Домен
DOMAIN=your-app-domain.com

# Cloudflare для Traefik
CLOUDFLARE_EMAIL=your-email@example.com
CLOUDFLARE_API_KEY=your-cloudflare-api-key

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=secure-password 